<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="0dp"
    tools:context="com.example.cashonwise.cashonwise.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cashonwise" />

        <TextView
            android:id="@+id/textView"
            style="@style/textView_style"
            android:shadowColor="#716f6f"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="3"
            android:textSize="20sp"
            android:textColor="#26e796"
            android:text="Be Wise While Spend" />

        <EditText
            android:id="@+id/editTextID"
            android:layout_width="321dp"
            android:layout_gravity="center"
            style="@style/editText_style"
            android:hint="@string/hint_verify_ID"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="321dp"
            android:layout_gravity="center"
            style="@style/editText_style"
            android:hint="@string/hint_verify_password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="321dp"
            android:layout_gravity="center"
            style="@style/button_style"
            android:onClick="verifyAccount"
            android:text="@string/button_login" />

        <Button
            android:id="@+id/buttonForgot"
            android:layout_width="321dp"
            android:layout_gravity="center"
            style="@style/button_style"
            android:onClick=""
            android:text="@string/button_forgot" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="321dp"
            android:layout_gravity="center"
            style="@style/button_style"
            android:onClick="toSignUp"
            android:text="@string/button_signup" />

        <TextView
            android:id="@+id/textViewSignUp"
            style="@style/textView_style"
            android:layout_margin="2dp"
            android:text="@string/tv_signup" />

    </LinearLayout>
</ScrollView>
