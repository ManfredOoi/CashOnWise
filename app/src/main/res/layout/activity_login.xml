<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="100dp"
    tools:context="com.example.cashonwise.cashonwise.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cashonwise" />

        <TextView
            android:id="@+id/textView"
            style="@style/textView_style"
            android:text="Be Wise While Spend" />

        <EditText
            android:id="@+id/editTextEmail"
            style="@style/editText_style"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassword"
            style="@style/editText_style"
            android:hint="Enter your password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginButton"
            style="@style/button_style"
            android:onClick="verifyAccount"
            android:text="Login" />

        <Button
            android:id="@+id/signUpButton"
            style="@style/button_style"
            android:onClick="toSignUp"
            android:text="Sign Up" />

        <TextView
            android:id="@+id/textView2"
            style="@style/textView_style"
            android:text="No Account? Hurry Up And Click On Sign Up Button For Free" />
    </LinearLayout>

</RelativeLayout>
